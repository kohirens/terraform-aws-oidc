{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Principal": {
                "Federated": "arn:aws:iam::${account_id}:oidc-provider/${domain}/org/${oranization_id}"
            },
            "Condition": {
                "StringEquals": {
                    "${domain}/org/${oranization_id}:aud": [
                        "${oranization_id}"
                    ]
                },
                "StringLike": {
                    "${domain}/org/${oranization_id}:sub": "org/${oranization_id}/project/${project_id}/user/*"
                }
            }
        }
    ]
}
